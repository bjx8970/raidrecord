{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "target": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "tmp",
        "baseUrl": ".",
        "paths": {
            "@spt/*": ["./spt-aki/*"]
        }
    },
    "lib": [
        "es2022"
    ],
    "include": [
        "src/*",
        "src/**/*"
    ]
}